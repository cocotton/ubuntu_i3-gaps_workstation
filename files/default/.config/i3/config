# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 5 px or 5 ppt
        bindsym k resize grow height 5 px or 5 ppt
        bindsym l resize shrink height 5 px or 5 ppt
        bindsym semicolon resize grow width 5 px or 5 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 5 px or 5 ppt
        bindsym Down resize grow height 5 px or 5 ppt
        bindsym Up resize shrink height 5 px or 5 ppt
        bindsym Right resize grow width 5 px or 5 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

set $background #2F343F
set $foreground #ffffff
set $gray       #d0d0d0
set $primary #ffffff
set $secondary #444444
set $tertiary #444444

set $additional #26CE8D
set $warning    #E7176A

mode "gaps" {
        bindsym Down gaps inner all minus 2
        bindsym Up gaps inner all plus 2
        bindsym Left gaps outer all minus 2
        bindsym Right gaps outer all plus 2

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym Tab    mode "default"
}
bindsym $mod+g mode "gaps"

# colors                BORDER      BACKGROUND TEXT        INDICATOR
client.focused          $primary    $primary   $foreground $primary
client.focused_inactive $secondary  $secondary $foreground $secondary
client.unfocused        $tertiary   $tertiary  $background $tertiary
client.urgent           $gray       $gray      $foreground $gray

# Custom edge borders hiding
hide_edge_borders both

# Custom bar settings
exec_always --no-startup-id $HOME/.config/polybar/scripts/polybar.sh

for_window [class=".*"] border pixel 1
gaps inner 5
gaps outer 1

# Custom keyboard layout
exec_always --no-startup-id "setxkbmap -layout us,ca -variant altgr-intl,multi -option grp:rwin_toggle"

# Custom rofi binding
bindsym $mod+d exec rofi -show run -lines 5 -eh 1 -width 100 -padding 486 -opacity "95" -bw 0 -line-margin 5 -font "Inconsolata Bold 20"

# Custom wallpaper
exec_always --no-startup-id hsetroot -add "#c79081" -add "#dfa579" -gradient 0

# Custom screen locking binding
bindsym $mod+Shift+x exec ~/.config/i3/scripts/lock.sh ~/.config/i3/scripts/lock.png

# Custom multimedia keys
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 0 +1% #increase sound volume
bindsym XF86AudioLowerVolume exec pactl set-sink-volume 0 -1% #decrease sound volume
bindsym XF86AudioMute exec pactl set-sink-mute 0 toggle # mute sound

# Custom screen brightness controls
bindsym XF86MonBrightnessUp exec light -A 1 # increase screen brightness
bindsym XF86MonBrightnessDown exec light -U 1 # decrease screen brightness

# Custom media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Custom xrandr configs
exec_always --no-startup-id xrandr --output DP-1-2-8 --mode 1920x1200 --pos 3840x0 --rotate normal --output DP-2-1 --primary --mode 1920x1200 --pos 0x0 --rotate normal --output DP-2-2 --off --output DP-2-3 --off --output DP-1-2-1 --off --output eDP-1 --off --output DP-1-2 --off --output DP-2-2-1 --off --output HDMI-2 --off --output HDMI-1 --off --output DP-2-2-8 --mode 1920x1200 --pos 1920x0 --rotate normal --output DP-1 --off --output DP-1-3 --off --output DP-2 --off --output DP-1-1 --off

